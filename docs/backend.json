{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["displayName", "email", "createdAt"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the inventory.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "sku": { "type": "string" },
        "categoryId": { "type": "string" },
        "stock": { "type": "number" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "supplierId": { "type": "string" },
        "averageDailySales": { "type": "number" },
        "leadTimeDays": { "type": "number" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "stock", "price", "userId"]
    },
    "PurchaseOrder": {
      "title": "Purchase Order",
      "description": "Represents a purchase order for a product from a supplier.",
      "type": "object",
      "properties": {
        "supplierId": { "type": "string" },
        "orderDate": { "type": "string", "format": "date-time" },
        "expectedDeliveryDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Pending", "Fulfilled", "Cancelled"] },
        "productId": { "type": "string" },
        "quantity": { "type": "number" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["supplierId", "orderDate", "status", "productId", "quantity", "userId"]
    },
    "Supplier": {
      "title": "Supplier",
      "description": "Represents a supplier of products.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "userId"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents an inventory transaction.",
      "type": "object",
      "properties": {
        "productId": { "type": "string" },
        "locationId": { "type": "string" },
        "type": { "type": "string", "enum": ["Sale", "Purchase"] },
        "quantity": { "type": "number" },
        "transactionDate": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["productId", "type", "quantity", "transactionDate", "userId"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a product category.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "userId": { "type": "string" }
      },
      "required": ["name", "userId"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores user-specific products."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": { "$ref": "#/entities/PurchaseOrder" },
      "description": "Stores user-specific purchase orders."
    },
    "/users/{userId}/suppliers/{supplierId}": {
      "schema": { "$ref": "#/entities/Supplier" },
      "description": "Stores user-specific suppliers."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores user-specific inventory transactions."
    },
    "/users/{userId}/categories/{categoryId}": {
        "schema": { "$ref": "#/entities/Category" },
        "description": "Stores user-specific product categories."
    }
  }
}
